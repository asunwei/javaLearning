<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  <servlet-class>web.AddServlet</servlet-class>
  <servlet-name>add</servlet-name>
  </servlet>
  <servlet-mapping>
  <servlet-name>add</servlet-name>
  <url-pattern>/demo/add</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-class>web.ViewServlet</servlet-class>
  <servlet-name>view</servlet-name>
  </servlet>
  <servlet-mapping>
  <servlet-name>view</servlet-name>
  <url-pattern>/demo/view</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-class>web.ModifyServlet</servlet-class>
  <servlet-name>modify</servlet-name>
  </servlet>
  <servlet-mapping>
  <servlet-name>modify</servlet-name>
  <url-pattern>/demo/modify</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-class>web.DestroyServlet</servlet-class>
  <servlet-name>destroy</servlet-name>
  </servlet>
  <servlet-mapping>
  <servlet-name>destroy</servlet-name>
  <url-pattern>/demo/destroy</url-pattern>
  </servlet-mapping>
  <!-- 设置session超时时间（分钟） -->
  <session-config>
  <session-timeout>1</session-timeout>
  </session-config>
  
 
</web-app>
